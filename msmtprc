# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Yandex
account        default
host           smtp.yandex.ru
port           465
tls_starttls   off
from           your-email@*.ru
user           enter-your-username-here
password       enter-your-password-heer
